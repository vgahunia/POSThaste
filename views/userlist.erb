<head>
	<link href='http://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="signin.js"></script>

	<link rel="stylesheet" href="style.css">
</head>

<div id="body">
	<div id="pic-box"><img id="logo" src="posthaste.png"></div>
	<div id="nav">
		<div class="menu-left menu">
			<ul>
				<li class="top"><a href="sign-out">Sign Out</a></li>
				<li><a href="delete">Close Account</a></li>
			</ul>
		</div>
		<div class="menu-right menu">
			<ul>
				<li class="top"><a href="profile">My Profile</a></li>
				<li class="top"><a href="post">Write a Post</a></li>
				<li><a href="feed">Recent Feed</a></li>
			</ul>
		</div>
	</div>


	<div class="box box_full">
		<%= flash[:alert] %>
		<h2>Member List</h2>
		<hr class="line">

		<% @users.each do |user| %>
			<h3>
				<span class="black">Member#<%= user.id %></span>
				<br>
				<span class="big"><%= user.username %></span>
				<% id = user.id %>
			</h3>
			<div id="member_links">
				<a href= <%= "friend/?friend_id=#{id}" %> >Start Friendship</a>
				<br>
				<a href=<%= "friend_profile/?friend_id=#{id}" %>> See <%= user.username %>'s page</a>
			</div>
			<br>
			<hr>
		<% end %>

	</div>
</div>