<head>
	<link href='http://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="/signin.js"></script>

	<link rel="stylesheet" href="/style.css">
</head>

<div id="body">

	<div id="nav">
		<div class="menu-left menu">
			<ul>
				<li class="top"><a href="sign-out">Sign Out</a></li>
				<li><a href="delete">Close Account</a></li>
			</ul>
		</div>
		<div class="menu-right menu">
			<ul>
				<li class="top"><a href="userlist">Member List</a></li>
				<li><a href="post">Write a Post</a></li>
			</ul>
		</div>
	</div>

	<div class="box_full">

		<div class="box" id="post-box">
			<h1> <%= @friend.username %> Profile Page </h1>
		</div>

		<div class="box" id="post-box">
			<h1><%= @friend.username %> recent posts</h1>

			<% @current.each do |post| %>
			<h2>
				<%= post.post %>
			</h2>
			<br>
			<% end %>
		</div>

		<div class="box" id="post-box">
			<h1><%= @friend.username %> Friends</h1>

			<% @friends.each do |friend| %>
			<h2>
				<%= friend.username %>
			</h2>
			<br>
			<% end %>
		</div>

	</div>

</div>